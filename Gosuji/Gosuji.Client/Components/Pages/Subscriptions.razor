@page "/subscriptions"

@inherits CustomPage

<PageTitle>Subscriptions</PageTitle>

<div id="subscriptionsPage">
    <h1 class="pageTitle subscription-header">Subscriptions</h1>

    <div class="subscription-cards">
        <div class="card subscription-cards__card">
            <div class="card-body">
                <h5 class="card-title">Free</h5>
                <div class="card-text">
                    <ul>
                        <li>Basic Settings</li>
                        <li>Maximum Visits 100</li>
                        <li>350 moves per day</li>
                    </ul>
                </div>
                <div class="card-text subscription__price">
                    €0,-
                </div>
                <a href="#" class="btn btn-link stretched-link"></a>
            </div>
        </div>
            <div class="card subscription-cards__card">
          <div class="card-body">
            <h5 class="card-title">Tier 1</h5>
                <div class="card-text">
                    <ul>
                        <li>All Settings</li>
                        <li>Maximum Visits 500</li>
                        <li>5.000 moves per day</li>
                    </ul>
                </div>
                <div class="card-text subscription__price">
                    €4,99
                </div>
                <a href="#" class="btn btn-link stretched-link"></a>
          </div>
        </div>
        <div class="card subscription-cards__card">
            <div class="card-body">
                <h5 class="card-title">Tier 2</h5>
                <div class="card-text">
                    <ul>
                        <li>All Settings</li>
                        <li>Maximum Visits 1.500</li>
                        <li>10.000 moves per day</li>
                    </ul>
                </div>
                <div class="card-text subscription__price">
                    €9,99
                </div>
                <a href="#" class="btn btn-link stretched-link"></a>
            </div>
        </div>
        <div class="card subscription-cards__card">
            <div class="card-body">
                <h5 class="card-title">Tier 3</h5>
                <div class="card-text">
                    <ul>
                        <li>All Settings</li>
                        <li>Maximum Visits 5.000</li>
                        <li>25.000 moves per day</li>
                    </ul>
                </div>
                <div class="card-text subscription__price">
                    €24,99
                </div>
                <a href="#" class="btn btn-link stretched-link"></a>
            </div>
        </div>
        <div class="card subscription-cards__card">
            <div class="card-body">
                <h5 class="card-title">Dynamic</h5>
                <div class="card-text">
                    <ul>
                        <li>All Settings</li>
                        <li>Maximum Visits 25.000</li>
                        <li>Unlimited moves</li>
                    </ul>
                </div>
                <div class="card-text subscription__price">
                    €0.0005/100 visits
                </div>
                <a href="#" class="btn btn-link stretched-link"></a>
            </div>
        </div>
    </div>
        <div class="selection">
        <select class="selection__dropdown ">
            <option value="1 month">Tier 1</option>
            <option value="2 month">Tier 2</option>
            <option value="3 month">Tier 3</option>
            <option value="4 month">Dynamic</option>
        </select>
            <button class="btn btn-primary selection__submit">Confirm</button>
        </div>
</div>

