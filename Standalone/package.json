{
  "name": "gosuji",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Manuel",
  "license": "ISC",
  "description": "Gosuji",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.gosuji",
    "productName": "Gosuji",
    "directories": {
      "output": "builder_out"
    },
    "extraResources": [
      {
        "from": "client",
        "to": "client",
        "filter": ["**/*"]
      },
      {
        "from": "api",
        "to": "api",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "asar": false
  }
}
